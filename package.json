{
  "name": "delaford",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "imports": {
    "#server/*": "./server/*",
    "#shared/*": "./server/shared/*"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "concurrently -c \"cyan,magenta\" \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite",
    "dev:server": "cross-env NODE_ENV=development nodemon --watch server --ext js,json --exec \"node --enable-source-maps server/index.js\"",
    "build": "vite build",
    "preview": "vite preview --port 4173 --host",
    "lint": "eslint .",
    "lint:css": "stylelint \"src/**/*.{scss,vue}\" --custom-syntax postcss-html --allow-empty-input",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "start:dev": "npm run dev",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:e2e": "start-server-and-test preview http://127.0.0.1:4173 \"playwright test\"",
    "format": "eslint . --fix"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "compression": "^1.7.4",
    "cross-env": "^10.0.0",
    "date-fns": "^4.1.0",
    "express": "^5.0.1",
    "express-sslify": "^1.2.0",
    "lodash": "^4.17.21",
    "mitt": "^3.0.1",
    "node-emoji": "^2.1.3",
    "pathfinding": "^0.4.18",
    "pinia": "^2.2.6",
    "pinia-plugin-persistedstate": "^3.2.0",
    "pm2": "^6.0.13",
    "ssl-express-www": "^3.2.1",
    "uuid": "^13.0.0",
    "vue": "^3.5.12",
    "vue-tippy": "^6.4.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@playwright/test": "^1.49.1",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/coverage-v8": "^2.1.5",
    "@vue/compiler-sfc": "^3.5.12",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "eslint": "^9.14.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import-x": "^4.4.0",
    "eslint-plugin-vue": "^9.29.1",
    "globals": "^15.11.0",
    "lint-staged": "^16.2.4",
    "nodemon": "^3.1.7",
    "playwright": "^1.49.1",
    "postcss-html": "^1.8.0",
    "sass": "^1.93.2",
    "start-server-and-test": "^2.0.4",
    "stylelint": "^16.25.0",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "vite": "^5.4.8",
    "vitest": "^2.1.5",
    "yorkie": "^2.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "nodemonConfig": {
    "env": {
      "SITE_URL": "http://website.test"
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --max-warnings=0"
    ],
    "*.vue": [
      "stylelint --custom-syntax postcss-html --allow-empty-input"
    ]
  },
  "volta": {
    "node": "22.11.0",
    "npm": "10.9.2"
  }
}
